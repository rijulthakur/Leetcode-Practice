class Solution {
    public int kthSmallest(int[][] matrix, int k) {
        int n = matrix.length;
        int size = n*n;
        int[] arr = new int[size];
        int x = 0;
           for(int i=0;i<n;i++)
           for(int j=0;j<n;j++){
                 arr[x] = matrix[i][j];
                    x++;
                }
            Arrays.sort(arr);
            return arr[k-1];
    }
}
